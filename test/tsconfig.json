{
  "compilerOptions": {
    "outDir": "dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "es6",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": []
}